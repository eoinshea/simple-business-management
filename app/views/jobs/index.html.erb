<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <h1>Jobs</h1>
  </hr>
  <br>
  <%= button_to 'Add New Job', new_job_path, method: :get , class: 'btn btn-primary' %>
  <br>
  <div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th>Customer details</th>
      <th>Job description</th>
      <th>Contractor</th>
      <th>Date time</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |job| %>
        <tr>
          <td><%= job.customer_details %></td>
          <td><%= job.job_description %></td>
          <td><%= job.contractor %></td>
          <td><%= job.date_time.strftime('%a, %d %b %Y %H:%M:') %></td>
          <td><%= link_to 'Edit', edit_job_path(job), class: 'btn btn-success' %></td>
          <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
    <% end %>


    </tbody>
  </table>
  </div>
  <br>
</div>



